plugins {
    id 'java-library'
    id 'com.google.protobuf'
}

java {
    sourceCompatibility = JavaVersion.VERSION_17
    targetCompatibility = JavaVersion.VERSION_17
}

protobuf {
    protoc { artifact = 'com.google.protobuf:protoc:3.19.2' }
    plugins {
        grpc { artifact = 'io.grpc:protoc-gen-grpc-java:1.59.0' }
    }
    generateProtoTasks {
        all().each { task ->
            task.builtins {
                java { option 'lite' }
            }
            task.plugins {
                grpc {
                    option 'lite'
                }
            }
        }
    }
}

dependencies {
    implementation 'io.grpc:grpc-protobuf-lite:1.59.0'
    implementation 'io.grpc:grpc-stub:1.59.0'
    implementation 'com.google.guava:guava:21.0'
    implementation 'org.checkerframework:checker-qual:3.34.0'
    implementation 'org.apache.tomcat:annotations-api:6.0.53'
}